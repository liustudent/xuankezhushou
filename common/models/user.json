{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "ltx_userid": {
      "type": "string",
      "required": true
    },
    "created": {
      "type": "date",
      "default": "$now"
    },
    "roleName": {
      "type": "string",
      "default": "normal"
    }
  },
  "validations": [],
  "relations": {
    "course_names": {
      "type": "hasMany",
      "model": "course_name",
      "foreignKey": "user_id",
      "through": "watch_course"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "normal",
      "permission": "ALLOW",
      "property": "getWatchList"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "normal",
      "permission": "ALLOW",
      "property": "addToWatchList"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "normal",
      "permission": "ALLOW",
      "property": "removeFromWatchList"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "normal",
      "permission": "ALLOW",
      "property": "bindLtxId"
    }
  ],
  "methods": {}
}